      "icons": [
        {
          "src": "/icons/camera-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Settings",
      "short_name": "Settings",
      "description": "System configuration",
      "url": "/settings",
      "icons": [
        {
          "src": "/icons/settings-shortcut.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    }
  ],
  "file_handlers": [
    {
      "action": "/video-import",
      "accept": {
        "video/mp4": [".mp4"],
        "video/quicktime": [".mov"]
