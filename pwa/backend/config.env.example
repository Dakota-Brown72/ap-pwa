# AnchorPoint Backend Environment Configuration

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-string
FLASK_ENV=production
FLASK_DEBUG=false

# Database Configuration
DATABASE_PATH=/data/anchorpoint.db

# External Service Configuration
FRIGATE_HOST=http://frigate:5000
GO2RTC_HOST=http://frigate:1984
HLS_SEGMENTS_PATH=/segments
FFMPEG_SERVICE_HOST=http://ffmpeg-streamer:8080

# Security Configuration
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=INFO

# CORS Configuration (comma-separated domains)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-domain.com

# Default Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password
ADMIN_EMAIL=admin@your-domain.com
ADMIN_FULL_NAME=System Administrator

# Camera RTSP Configuration
# Format: rtsp://username:password@ip:port/path
CAMERA_FRONTYARD_URL=rtsp://username:password@192.168.1.xxx:554/path
CAMERA_BACKYARD_URL=rtsp://username:password@192.168.1.xxx:554/path
CAMERA_LIVING_ROOM_URL=rtsp://username:password@192.168.1.xxx:554/path
CAMERA_NURSERY_URL=rtsp://username:password@192.168.1.xxx:554/path
